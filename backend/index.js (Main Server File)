const express = require('express');
const ParseServer = require('parse-server').ParseServer;

const app = express();

const api = new ParseServer({
  databaseURI: process.env.DATABASE_URI || 'mongodb://localhost:27017/asset-db',
  cloud: './cloud/main.js',
  appId: process.env.APP_ID || 'myAppId',
  masterKey: process.env.MASTER_KEY || 'myMasterKey',
  serverURL: process.env.SERVER_URL || 'http://localhost:1337/parse',
  javascriptKey: process.env.JAVASCRIPT_KEY || 'myJsKey',
});

app.use('/parse', api);

app.get('/', (req, res) => {
  res.json({ 
    status: 'OK', 
    message: 'Asset Management Backend is running',
    endpoints: {
      parse: '/parse',
      health: '/'
    }
  });
});

app.use((req, res, next) => {
  res.header('Access-Control-Allow-Origin', '*');
  res.header('Access-Control-Allow-Methods', 'GET, POST, PUT, DELETE, OPTIONS');
  res.header('Access-Control-Allow-Headers', 'Origin, X-Requested-With, Content-Type, Accept');
  if (req.method === 'OPTIONS') {
    return res.sendStatus(200);
  }
  next();
});

const port = process.env.PORT || 1337;

app.listen(port, '0.0.0.0', () => {
  console.log(`ğŸš€ Server running on port ${port}`);
  console.log(`ğŸ“¡ Parse Server: http://0.0.0.0:${port}/parse`);
});
```

